- title "Song"

%p
  %strong Artist:
  = @song.artist
%p
  %strong Title:
  = @song.title
%p
  %strong Is Active:
  = @song.is_active
  
%table
  %tr
    %th Chart
    %th Position
    %th Votes
  - @results.each do |result|
    %tr
      %td= result.chart.number
      %td= result.position
      %td= result.nb_of_votes

%p
  = link_to "Edit", edit_song_path(@song)
  |
  = link_to "Destroy", @song, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", songs_path

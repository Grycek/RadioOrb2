- title "Song"

%p
  %strong Artist:
  = @song.artist
%p
  %strong Title:
  = @song.title
%p
  %strong Is Active:
  = @song.is_active

%p
  = link_to "Edit", edit_song_path(@song)
  |
  = link_to "Destroy", @song, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", songs_path

- title "Songs"

%table
  %tr
    %th Artist
    %th Title
    %th Is active
  - for song in @songs
    %tr
      %td= song.artist
      %td= song.title
      %td= song.is_active
      %td= link_to 'Show', song
      %td= link_to 'Edit', edit_song_path(song)
      %td= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete
      
= will_paginate @songs

%p= link_to "New Song", new_song_path(song)

= form_for chart do |f|
  = f.error_messages
  %p
    = f.label :number
    %br
    = f.text_field :number
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :date
    %br
    =# f.datetime_select :date
    = f.text_field :date, :class => "date_pick"
  %p
    = f.submit

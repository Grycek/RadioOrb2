- title "Charts"

%table
  %tr
    %th Number
    %th Description
    %th Date
  - for chart in @charts
    %tr
      %td= chart.number
      %td= chart.description
      %td= chart.date
      %td= link_to 'Show', chart
      %td= link_to 'Edit', edit_chart_path(chart)
      %td= link_to 'Destroy', chart, :confirm => 'Are you sure?', :method => :delete
      
= will_paginate @charts

%p= link_to "Close voting and create new chart", new_chart_path(chart)

= form_for @article do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :shortcontent
    %br
    = f.text_area :shortcontent, :class => "mceEditor"
  %p
    = f.label :content
    %br
    = f.text_area :content, :class => "mceEditor"
  %p
    = f.label :start_date
    %br
    =# f.datetime_select :start_date
    = f.text_field :start_date, :class => "date_pick"
  %p
    = f.label :end_date
    %br
    =# f.datetime_select :end_date
    = f.text_field :end_date, :class => "date_pick"
  %p
    = f.submit

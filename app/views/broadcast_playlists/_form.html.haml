= form_for [@broadcast,@broadcast_playlist] do |f|
  = f.error_messages
  %p
    = f.label :date
    %br
    =# f.datetime_select :date
    = f.text_field :date, :class => "date_pick"
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :playlist
    %br
    = f.text_area :playlist
  %p
    = f.submit

<% title "Broadcasts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Is Active</th>
    <th>Day</th>
    <th>Hour Start</th>
    <th>Hour End</th>
  </tr>
  <% for broadcast in @broadcasts %>
    <tr>
      <td><%= broadcast.name %></td>
      <td><%= broadcast.description %></td>
      <td><%= broadcast.is_active %></td>
      <td><%= broadcast.day %></td>
      <td><%= broadcast.hour_start %></td>
      <td><%= broadcast.hour_end %></td>
      <td><%= link_to "Show", broadcast %></td>
      <td><%= link_to "Edit", edit_broadcast_path(broadcast) %></td>
      <td><%= link_to "Destroy", broadcast, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Broadcast", new_broadcast_path(broadcast) %></p>

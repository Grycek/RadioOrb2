- title "Broadcast"

%p
  %strong Name:
  = @broadcast.name
%p
  %strong Description:
  = @broadcast.description
%p
  %strong Is Active:
  = @broadcast.is_active
%p
  %strong Day:
  = @broadcast.day
%p
  %strong Hour Start:
  = @broadcast.hour_start
%p
  %strong Hour End:
  = @broadcast.hour_end
  
%p
  %strong Presenters:
  %p
    %ul
      - @presenters.each do |presenter|    
        %li= presenter.email

%p
  - if authenticate_presenter
    = link_to "Edit", edit_broadcast_path(@broadcast)
    |
  = link_to "View All", broadcasts_path
